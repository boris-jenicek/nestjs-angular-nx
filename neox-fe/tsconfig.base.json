{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@team-link/auth": ["libs/features/views/auth/src/index.ts"],
      "@team-link/button": ["libs/core-components/button/src/index.ts"],
      "@team-link/config": ["libs/shared/config/src/index.ts"],
      "@team-link/dashboard": ["libs/features/views/dashboard/src/index.ts"],
      "@team-link/data-access": ["libs/data-access/src/index.ts"],
      "@team-link/data-access-shared": ["libs/data-access/shared/src/index.ts"],
      "@team-link/dev-playground": ["libs/dev-playground/src/index.ts"],
      "@team-link/form-controls": ["libs/core-components/form/src/index.ts"],
      "@team-link/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
